{
  "mcpServers": {
    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "."]
    },
    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "disabled": true
    },
    "firecrawl": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      },
      "disabled": true
    },
    "morph": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@morphllm/morphmcp"],
      "env": {
        "MORPH_API_KEY": "${MORPH_API_KEY}"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "disabled": true
    },
    "nia": {
      "type": "stdio",
      "command": "pipx",
      "args": ["run", "--no-cache", "nia-mcp-server"],
      "env": {
        "NIA_API_KEY": "${NIA_API_KEY}",
        "NIA_API_URL": "https://apigcp.trynia.ai/"
      },
      "disabled": true
    },
    "ast-grep": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-ast-grep"],
      "disabled": true
    },
    "repoprompt": {
      "type": "stdio",
      "command": "repoprompt_cli",
      "args": [],
      "disabled": true,
      "note": "macOS only - use repomix instead on Linux"
    },
    "repomix": {
      "type": "stdio",
      "command": "node",
      "args": ["/home/marlonsc/repomix/bin/repomix.cjs", "--mcp"],
      "description": "Codebase packing with Tree-sitter compression (~70% token reduction)"
    },
    "claude-mem": {
      "type": "stdio",
      "command": "node",
      "args": ["/home/marlonsc/.claude/plugins/marketplaces/thedotmack/claude-mem-search/dist/index.js"],
      "description": "Cross-session memory via SQLite+Chroma - replaces Braintrust learnings"
    },
    "qlty": {
      "type": "stdio",
      "command": "python",
      "args": ["servers/qlty/server.py"],
      "disabled": false
    }
  }
}
